 res/values/cm_strings.xml    |  4 ++++
 res/xml/display_settings.xml | 11 +++++++++++
 2 files changed, 15 insertions(+)

diff --git a/res/values/cm_strings.xml b/res/values/cm_strings.xml
index 54804b171d..891439d890 100644
--- a/res/values/cm_strings.xml
+++ b/res/values/cm_strings.xml
@@ -510,4 +510,8 @@
     <!-- Burn in protection -->
     <string name="burnin_protection_title">Display burn-in protection</string>
     <string name="burnin_protection_summary">Periodically move items that are permanently shown on screen to avoid excessive screen wear in that area</string>
+
+    <!-- MiraVision -->
+    <string name="mira_vision_title" translatable="false">MiraVision</string>
+    <string name="mira_vision_summary">Provider the best visual effects</string>
 </resources>
diff --git a/res/xml/display_settings.xml b/res/xml/display_settings.xml
index 39c4ba65d8..fedfd14180 100644
--- a/res/xml/display_settings.xml
+++ b/res/xml/display_settings.xml
@@ -37,6 +37,17 @@
                 settings:keywords="@string/keywords_display_auto_brightness"
                 android:summary="@string/auto_brightness_summary" />
 
+        <!-- MiraVision -->
+        <PreferenceScreen
+                android:key="mira_vision"
+                android:title="@string/mira_vision_title"
+                android:summary="@string/mira_vision_summary">
+            <intent
+                    android:action="android.intent.action.MAIN"
+                    android:targetPackage="com.mediatek.miravision.ui"
+                    android:targetClass="com.mediatek.miravision.ui.MiraVisionActivity" />
+        </PreferenceScreen>
+
         <!-- LiveDisplay -->
         <org.cyanogenmod.internal.cmparts.CMPartsPreference
             android:key="livedisplay"
